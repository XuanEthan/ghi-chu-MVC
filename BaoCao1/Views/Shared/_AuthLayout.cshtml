@{
        Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

    <style>
        body {
            background: url(/image/AZswd5gFVk2v0aDavoTSFw-AZswd5gFzkuMCHDc-E_Lcw.jpg) no-repeat center center / cover;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container min-vh-100 d-flex align-items-center justify-content-center">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function getFormData($form) {
            var unindexed_array = $form.serializeArray();
            var indexed_array = {};

            $.map(unindexed_array, function (n) {
                indexed_array[n.name] = n.value;
            });

            return indexed_array;
        }

        function login() {
            var data = getFormData($('form'));

            $.post("/Accounts/Login", data)
                .done(function (resp) {
                    if(resp.isSuccess) {
                        alert("Đăng nhập thành công!");
                        setTimeout(function() {
                            window.location.href = "/Ghichus/Index";
                        }, 3000);
                    }else{
                       $('#msg').text(resp.message);
                    }
                })
                .fail(function (err) {
                    console.log(err);
                });
        }

        function register() {
            var data = getFormData($('form'));

            $.post("/Accounts/Register", data)
                .done(function (resp) {
                    if(resp.isSuccess) {
                        alert("Đăng ký thành công!");
                        setTimeout(function() {
                            window.location.href = "/Accounts/Login";
                        }, 3000);
                    }else{
                                               $('#msg').text(resp.message);
                    }
                })
                .fail(function (err) {
                    console.log(err);
                });
        }

        function logout(){

        }

    </script>
</body>
</html>
