@inject IHttpContextAccessor httpContextAccessor;
@using BaoCao1.Services.Base;

@{
    Layout = "_GhichuLayout";
    var isAuthenticated = UserContext.getIsAuthenticated(httpContextAccessor.HttpContext);
}

    <div class="topbar">
        <div class="app-name">
            MyNotes
        </div>
        @if(isAuthenticated)
        {
            <div class="ms-auto auth-actions">
                <a href="/Accounts/Logout" class="btn btn-outline-danger btn-sm">
                    Đăng xuất
                </a>
            </div>
        }
        else
        {
        <div class="ms-auto auth-actions">
            <a href="/Accounts/Login" class="btn btn-outline-primary btn-sm me-2">
                Đăng nhập
            </a>
            <a href="/Accounts/Register" class="btn btn-primary btn-sm">
                Đăng ký
            </a>
        </div>
        }
    </div>
    <div id="wrapper">
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4 border-bottom border-light mb-4">
                <div class="d-flex align-items-center w-100">
                    <div class="position-relative flex-grow-1 me-3" style="max-width: 500px">
                        <input type="text" class="form-control search-input" placeholder="Tìm kiếm..." />
                    </div>
                    <button type="button" class="btn btn-primary btn-add-note ms-auto text-nowrap" onclick="getThemForm()">
                        <i class="bi bi-plus-lg"></i><span class="d-none d-md-inline">Mới</span>
                    </button>
                </div>
            </nav>

            <div class="container-fluid px-4 content">
            </div>
        </div>
    </div>

    <div class="modal fade" id="NoteModal" tabindex="-1" aria-hidden="true"></div>
